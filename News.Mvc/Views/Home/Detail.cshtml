@model DataResponse<GetDetailDto>
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Data.Detail.data.newsDetail.title;
}

<div class="item-detail">
    <h1>@Model.Data.Detail.data.newsDetail.title</h1>
    <img src="@Model.Data.Detail.data.newsDetail.imageUrl" alt="@Model.Data.Detail.data.newsDetail.title" />
    <p>@Html.Raw(Model.Data.Detail.data.newsDetail.bodyText)</p>
</div>

@section Styles {
    <style>
        .item-detail {
            max-width: 800px;
            margin: 20px auto 0 auto;
            text-align: center;
        }

            .item-detail img {
                max-width: 100%;
                height: auto;
                margin-bottom: 20px;
            }

            .item-detail h1 {
                font-size: 2em;
                margin-bottom: 20px;
            }

            .item-detail p {
                font-size: 1.2em;
                color: #555;
            }
    </style>
}
